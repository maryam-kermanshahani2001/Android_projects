<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.HW2"
    tools:context=".AboutAppActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        app:srcCompat="@drawable/thynk" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:text="App name: Fale Hafez"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/authorTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTv"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="Author: Maryam Kermanshahani"
        android:theme="@style/Theme.HW2"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/versionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorTv"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="Version: v1"
        android:textSize="24sp" />


</RelativeLayout>