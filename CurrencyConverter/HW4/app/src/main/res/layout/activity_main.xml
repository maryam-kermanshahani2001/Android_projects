<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/laysp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:inputType="number"
            app:errorIconDrawable="@drawable/ic_error"
       />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="10dp" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/rialResult"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/laysp"
        android:layout_marginLeft="20dp"
        android:background="@color/gray"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/candRes"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/rialResult"
        android:layout_marginLeft="20dp"
        android:background="@color/gray"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/usdRes"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/candRes"
        android:layout_marginLeft="20dp"
        android:background="@color/gray"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/pondRes"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/usdRes"
        android:layout_marginLeft="20dp"
        android:background="@color/gray"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/euroRes"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/pondRes"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        />

    <TextView
        android:id="@+id/derRes"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/euroRes"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray"/>
    <!-- <Button
         android:id="@+id/submitBtn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/laysp"
         android:layout_centerHorizontal="true" />-->
</RelativeLayout>
